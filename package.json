{
  "name": "typescript-design-patterns",
  "version": "1.0.0",
  "description": "Comprehensive TypeScript implementations and in-depth explanations of all design patterns, SOLID principles and architectural best practices, illustrated with practical real-world examples.",
  "main": "index.js",
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "node": ">=22.1.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src"
  },
  "author": "Amine Azizi",
  "license": "MIT",
  "keywords": [
    "typescript",
    "design-patterns",
    "solid-principles",
    "architectural-best-practices",
    "typescript-design-patterns",
    "typescript-solid-principles",
    "typescript-architectural-best-practices"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techgrange/typescript-design-patterns.git"
  },
  "bugs": {
    "url": "https://github.com/techgrange/typescript-design-patterns/issues"
  },
  "homepage": "https://github.com/techgrange/typescript-design-patterns#readme",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
